<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <!-- Background -->
    <ImageView
        android:id="@+id/corners_cut_shape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        android:contentDescription="@string/card_background"
        android:scaleType="fitXY"
        android:src="@drawable/bg_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Left Gradient -->
    <View
        android:id="@+id/gradient_left"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/bg_gradient_blue_fade"
        android:rotation="180"
        android:translationX="5dp"
        app:layout_constraintDimensionRatio="56:1"
        app:layout_constraintEnd_toStartOf="@id/heptagon_shape"
        app:layout_constraintTop_toTopOf="@id/corners_cut_shape" />

    <!-- Right Gradient -->
    <View
        android:id="@+id/gradient_right"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/bg_gradient_blue_fade"
        android:translationX="-5dp"
        app:layout_constraintDimensionRatio="56:1"
        app:layout_constraintStart_toEndOf="@id/heptagon_shape"
        app:layout_constraintTop_toTopOf="@id/corners_cut_shape" />

    <!-- Title Background -->
    <ImageView
        android:id="@+id/heptagon_shape"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:contentDescription="@null"
        android:src="@drawable/heptagon_shape"
        app:layout_constraintDimensionRatio="145:40"
        app:layout_constraintEnd_toEndOf="@id/corners_cut_shape"
        app:layout_constraintStart_toStartOf="@id/corners_cut_shape"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_dialog_title"
        style="@style/TextAppearance.Title.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/on_primary"
        tools:text="Explorer"
        app:layout_constraintBottom_toBottomOf="@id/heptagon_shape"
        app:layout_constraintEnd_toEndOf="@id/heptagon_shape"
        app:layout_constraintStart_toStartOf="@id/heptagon_shape"
        app:layout_constraintTop_toTopOf="@id/heptagon_shape" />

    <!-- Close Button -->
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="22dp"
        android:layout_height="26dp"
        android:clickable="true"
        android:contentDescription="@string/back"
        android:focusable="true"
        android:src="@drawable/ic_cancel"
        app:layout_constraintEnd_toEndOf="@id/corners_cut_shape"
        app:layout_constraintTop_toTopOf="@id/corners_cut_shape" />

    <!-- Achievement Card Background -->
    <View
        android:id="@+id/view_achievement_card"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:minHeight="100dp"
        android:background="@drawable/bg_character_card"
        app:layout_constraintEnd_toEndOf="@id/corners_cut_shape"
        app:layout_constraintStart_toStartOf="@id/corners_cut_shape"
        app:layout_constraintTop_toBottomOf="@id/heptagon_shape" />

    <!-- Achievement Name -->
    <TextView
        android:id="@+id/tv_achievement_name"
        style="@style/TextAppearance.Title.Large"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/on_primary"
        tools:text="Explorer"
        app:layout_constraintBottom_toBottomOf="@id/view_achievement_card"
        app:layout_constraintEnd_toStartOf="@id/badge_container"
        app:layout_constraintStart_toStartOf="@id/view_achievement_card"
        app:layout_constraintTop_toTopOf="@id/view_achievement_card" />

    <!-- Badge Container -->
    <FrameLayout
        android:id="@+id/badge_container"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="@id/view_achievement_card"
        app:layout_constraintEnd_toEndOf="@id/view_achievement_card"
        app:layout_constraintTop_toTopOf="@id/view_achievement_card">

        <!-- Decoration Background (shown only when unlocked) -->
        <ImageView
            android:id="@+id/iv_badge_decoration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@drawable/bg_badge_decoration"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Locked Background (shown only when locked) -->
        <ImageView
            android:id="@+id/iv_locked_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@drawable/ic_lock"
            android:visibility="gone"
            tools:visibility="gone" />

        <!-- Achievement Badge Icon -->
        <ImageView
            android:id="@+id/iv_badge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/awards"
            android:padding="8dp"
            tools:src="@drawable/ic_achievement_explorer" />
    </FrameLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/tv_description"
        style="@style/TextAppearance.Body.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/shade_secondary"
        tools:text="You love experimenting and discovering! You've tried several categories and aren't limited to just one."
        app:layout_constraintEnd_toEndOf="@id/corners_cut_shape"
        app:layout_constraintStart_toStartOf="@id/corners_cut_shape"
        app:layout_constraintTop_toBottomOf="@id/view_achievement_card" />

    <!-- How to get label -->
    <TextView
        android:id="@+id/tv_how_label"
        style="@style/TextAppearance.Body.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        android:text="@string/how_to_get_it"
        android:textColor="@color/shade_primary"
        app:layout_constraintEnd_toEndOf="@id/corners_cut_shape"
        app:layout_constraintStart_toStartOf="@id/corners_cut_shape"
        app:layout_constraintTop_toBottomOf="@id/tv_description" />

    <!-- How to get description -->
    <TextView
        android:id="@+id/tv_how_to_get"
        style="@style/TextAppearance.Body.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/shade_secondary"
        tools:text="Play in at least 5 different categories."
        app:layout_constraintEnd_toEndOf="@id/corners_cut_shape"
        app:layout_constraintStart_toStartOf="@id/corners_cut_shape"
        app:layout_constraintTop_toBottomOf="@id/tv_how_label" />

    <!-- Share Button (only visible when unlocked) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_share"
        style="@style/TextAppearance.Label.Medium"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/bg_button_primary"
        android:drawableEnd="@drawable/ic_share"
        android:drawableTint="@color/white"
        android:text="@string/share_with_friends"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/corners_cut_shape"
        app:layout_constraintEnd_toStartOf="@id/btn_ok"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/corners_cut_shape"
        app:layout_constraintTop_toBottomOf="@id/tv_how_to_get" />

    <!-- OK Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        style="@style/TextAppearance.Label.Medium"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_button_secondary"
        android:text="@string/ok"
        android:textAllCaps="false"
        android:textColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="@id/btn_share"
        app:layout_constraintEnd_toEndOf="@id/corners_cut_shape"
        app:layout_constraintStart_toEndOf="@id/btn_share"
        app:layout_constraintTop_toTopOf="@id/btn_share" />

</androidx.constraintlayout.widget.ConstraintLayout>