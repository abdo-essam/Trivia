<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <!-- Background Border Shape -->
    <ImageView
        android:id="@+id/corners_cut_shape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        android:contentDescription="@string/card_background"
        android:scaleType="fitXY"
        android:src="@drawable/bg_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Left Gradient -->
    <View
        android:id="@+id/gradient_left"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/bg_gradient_blue_fade"
        android:rotation="180"
        android:translationX="5dp"
        app:layout_constraintDimensionRatio="56:1"
        app:layout_constraintEnd_toStartOf="@id/heptagon_shape"
        app:layout_constraintTop_toTopOf="@id/corners_cut_shape" />

    <!-- Right Gradient -->
    <View
        android:id="@+id/gradient_right"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/bg_gradient_blue_fade"
        android:translationX="-5dp"
        app:layout_constraintDimensionRatio="56:1"
        app:layout_constraintStart_toEndOf="@id/heptagon_shape"
        app:layout_constraintTop_toTopOf="@id/corners_cut_shape" />

    <!-- Heptagon Title Background -->
    <ImageView
        android:id="@+id/heptagon_shape"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:contentDescription="@null"
        android:src="@drawable/heptagon_shape"
        app:layout_constraintDimensionRatio="145:40"
        app:layout_constraintEnd_toEndOf="@id/corners_cut_shape"
        app:layout_constraintStart_toStartOf="@id/corners_cut_shape"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/tv_dialog_title"
        style="@style/TextAppearance.Title.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textColor="@color/on_primary"
        app:layout_constraintBottom_toBottomOf="@id/heptagon_shape"
        app:layout_constraintEnd_toEndOf="@id/heptagon_shape"
        app:layout_constraintStart_toStartOf="@id/heptagon_shape"
        app:layout_constraintTop_toTopOf="@id/heptagon_shape" />

    <!-- Close Button -->
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="22dp"
        android:layout_height="26dp"
        android:clickable="true"
        android:contentDescription="@string/back"
        android:focusable="true"
        android:src="@drawable/ic_cancel"
        app:layout_constraintEnd_toEndOf="@id/corners_cut_shape"
        app:layout_constraintTop_toTopOf="@id/corners_cut_shape" />

    <!-- Sound Section -->
    <ImageView
        android:id="@+id/iv_sound"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/sound"
        android:src="@drawable/ic_sound"
        app:layout_constraintStart_toStartOf="@id/corners_cut_shape"
        app:layout_constraintTop_toBottomOf="@id/heptagon_shape"
        app:tint="@color/shade_secondary" />

    <TextView
        android:id="@+id/tv_sound"
        style="@style/TextAppearance.Title.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/sound"
        android:textColor="@color/shade_secondary"
        app:layout_constraintBottom_toBottomOf="@id/iv_sound"
        app:layout_constraintStart_toEndOf="@id/iv_sound"
        app:layout_constraintTop_toTopOf="@id/iv_sound" />

    <!-- Sound Slider -->
    <com.google.android.material.slider.Slider
        android:id="@+id/slider_sound"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:stepSize="1"
        android:value="80"
        android:valueFrom="0"
        android:valueTo="100"
        app:labelBehavior="gone"
        app:layout_constraintEnd_toEndOf="@id/corners_cut_shape"
        app:layout_constraintStart_toStartOf="@id/corners_cut_shape"
        app:layout_constraintTop_toBottomOf="@id/iv_sound"
        app:thumbColor="@color/primary"
        app:thumbRadius="16dp"
        app:trackColorActive="@color/primary"
        app:trackColorInactive="@color/surface"
        app:trackHeight="4dp" />

    <!-- Music Section -->
    <ImageView
        android:id="@+id/iv_music"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/music"
        android:src="@drawable/ic_music"
        app:layout_constraintStart_toStartOf="@id/corners_cut_shape"
        app:layout_constraintTop_toBottomOf="@id/slider_sound"
        app:tint="@color/shade_secondary" />

    <TextView
        android:id="@+id/tv_music"
        style="@style/TextAppearance.Title.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/music"
        android:textColor="@color/shade_secondary"
        app:layout_constraintBottom_toBottomOf="@id/iv_music"
        app:layout_constraintStart_toEndOf="@id/iv_music"
        app:layout_constraintTop_toTopOf="@id/iv_music" />

    <!-- Music Slider -->
    <com.google.android.material.slider.Slider
        android:id="@+id/slider_music"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:stepSize="1"
        android:value="60"
        android:valueFrom="0"
        android:valueTo="100"
        app:labelBehavior="gone"
        app:layout_constraintEnd_toEndOf="@id/corners_cut_shape"
        app:layout_constraintStart_toStartOf="@id/corners_cut_shape"
        app:layout_constraintTop_toBottomOf="@id/iv_music"
        app:thumbColor="@color/primary"
        app:thumbRadius="16dp"
        app:trackColorActive="@color/primary"
        app:trackColorInactive="@color/surface"
        app:trackHeight="4dp" />

    <!-- Divider Line -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="32dp"
        android:background="@color/primary"
        app:layout_constraintEnd_toEndOf="@id/corners_cut_shape"
        app:layout_constraintStart_toStartOf="@id/corners_cut_shape"
        app:layout_constraintTop_toBottomOf="@id/slider_music" />

    <!-- Save Changes Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        style="@style/TextAppearance.Label.Medium"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/bg_button_primary"
        android:text="@string/save_changes"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/corners_cut_shape"
        app:layout_constraintEnd_toStartOf="@id/btn_discard"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/corners_cut_shape"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <!-- Discard Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_discard"
        style="@style/TextAppearance.Label.Medium"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_button_secondary"
        android:text="@string/discard"
        android:textAllCaps="false"
        android:textColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="@id/btn_save"
        app:layout_constraintEnd_toEndOf="@id/corners_cut_shape"
        app:layout_constraintStart_toEndOf="@id/btn_save"
        app:layout_constraintTop_toTopOf="@id/btn_save" />

</androidx.constraintlayout.widget.ConstraintLayout>