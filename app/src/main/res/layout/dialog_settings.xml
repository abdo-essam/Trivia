<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:padding="24dp">

    <!-- Close Button -->
    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_close_button"
        android:src="@drawable/ic_close"
        android:contentDescription="@string/back"
        app:tint="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textAppearance="@style/TextAppearance.Title.Medium"
        android:textColor="@color/white"
        android:background="@drawable/bg_dialog_title"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="-40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Sound Section -->
    <ImageView
        android:id="@+id/iv_sound"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_sound"
        android:contentDescription="@string/sound"
        app:tint="@color/white"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sound"
        android:textAppearance="@style/TextAppearance.Body.Large"
        android:textColor="@color/shade_secondary"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/iv_sound"
        app:layout_constraintTop_toTopOf="@id/iv_sound"
        app:layout_constraintBottom_toBottomOf="@id/iv_sound" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_sound"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="100"
        android:value="80"
        android:stepSize="1"
        app:thumbColor="@color/primary"
        app:trackColorActive="@color/primary"
        app:trackColorInactive="@color/shade_quad"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_sound" />

    <!-- Music Section -->
    <ImageView
        android:id="@+id/iv_music"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_music"
        android:contentDescription="@string/music"
        app:tint="@color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slider_sound" />

    <TextView
        android:id="@+id/tv_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/music"
        android:textAppearance="@style/TextAppearance.Body.Large"
        android:textColor="@color/shade_secondary"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/iv_music"
        app:layout_constraintTop_toTopOf="@id/iv_music"
        app:layout_constraintBottom_toBottomOf="@id/iv_music" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_music"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="100"
        android:value="60"
        android:stepSize="1"
        app:thumbColor="@color/primary"
        app:trackColorActive="@color/primary"
        app:trackColorInactive="@color/shade_quad"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_music" />

    <!-- Buttons -->
    <Button
        android:id="@+id/btn_save"
        style="@style/Widget.App.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/save_changes"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/btn_discard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slider_music" />

    <Button
        android:id="@+id/btn_discard"
        style="@style/Widget.App.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/discard"
        android:backgroundTint="@color/transparent"
        android:textColor="@color/primary"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_save"
        app:layout_constraintTop_toTopOf="@id/btn_save" />

</androidx.constraintlayout.widget.ConstraintLayout>