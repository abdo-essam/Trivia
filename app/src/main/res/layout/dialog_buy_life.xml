<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_close_button"
        android:src="@drawable/ic_close"
        android:contentDescription="@string/back"
        app:tint="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy life"
        android:textAppearance="@style/TextAppearance.Title.Medium"
        android:textColor="@color/white"
        android:background="@drawable/bg_dialog_title"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="-40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Purchase Info -->
    <LinearLayout
        android:id="@+id/layout_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_heart"
            android:contentDescription="@string/lives"
            app:tint="@color/red_accent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAppearance="@style/TextAppearance.Headline.Large"
            android:textColor="@color/white"
            android:layout_marginHorizontal="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textAppearance="@style/TextAppearance.Headline.Large"
            android:textColor="@color/white"
            android:layout_marginHorizontal="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textAppearance="@style/TextAppearance.Headline.Large"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ã—"
            android:textAppearance="@style/TextAppearance.Headline.Large"
            android:textColor="@color/white"
            android:layout_marginStart="8dp" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_coin_stack"
            android:contentDescription="@string/coins"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Action Buttons -->
    <Button
        android:id="@+id/btn_buy"
        style="@style/Widget.App.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Buy"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/btn_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_purchase" />

    <Button
        android:id="@+id/btn_cancel"
        style="@style/Widget.App.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@android:string/cancel"
        android:backgroundTint="@color/transparent"
        android:textColor="@color/primary"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_buy"
        app:layout_constraintTop_toTopOf="@id/btn_buy" />

</androidx.constraintlayout.widget.ConstraintLayout>

