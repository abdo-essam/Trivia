<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_gradient_left"
        android:layout_width="56dp"
        android:layout_height="1dp"
        android:background="@drawable/bg_gradient_blue_fade"
        android:rotation="180"
        android:translationX="10dp"
        app:layout_constraintBottom_toBottomOf="@id/question_counter_badge"
        app:layout_constraintEnd_toStartOf="@id/question_counter_badge"
        app:layout_constraintTop_toTopOf="@id/question_counter_badge" />

    <FrameLayout
        android:id="@+id/question_counter_badge"
        android:layout_width="160dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/heptagon_shape" />

        <TextView
            android:id="@+id/tv_question_counter"
            style="@style/TextAppearance.Label.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:textColor="@color/on_primary"
            tools:text="Q 1/12" />
    </FrameLayout>

    <View
        android:id="@+id/view_gradient_right"
        android:layout_width="56dp"
        android:layout_height="1dp"
        android:background="@drawable/bg_gradient_blue_fade"
        android:translationX="-10dp"
        app:layout_constraintBottom_toBottomOf="@id/question_counter_badge"
        app:layout_constraintStart_toEndOf="@id/question_counter_badge"
        app:layout_constraintTop_toTopOf="@id/question_counter_badge" />

</androidx.constraintlayout.widget.ConstraintLayout>