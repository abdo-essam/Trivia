<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_close_button"
        android:src="@drawable/ic_close"
        android:contentDescription="@string/back"
        app:tint="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Character"
        android:textAppearance="@style/TextAppearance.Title.Medium"
        android:textColor="@color/white"
        android:background="@drawable/bg_dialog_title"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="-40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Character Image -->
    <ImageView
        android:id="@+id/iv_character"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="56dp"
        android:contentDescription="@string/character_image"
        tools:src="@drawable/character_rika"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <!-- Character Name -->
    <TextView
        android:id="@+id/tv_character_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Headline.Small"
        android:textColor="@color/white"
        android:layout_marginEnd="16dp"
        tools:text="Rika"
        app:layout_constraintEnd_toStartOf="@id/iv_character"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_character" />

    <!-- Character Age -->
    <TextView
        android:id="@+id/tv_character_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Body.Small"
        android:textColor="@color/shade_secondary"
        android:layout_marginTop="4dp"
        tools:text="Age: 12 Sunblooms"
        app:layout_constraintEnd_toEndOf="@id/tv_character_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_character_name" />

    <!-- Character Description -->
    <TextView
        android:id="@+id/tv_character_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Body.Small"
        android:textColor="@color/shade_secondary"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="24dp"
        tools:text="Nature's little explorer! Rika talks to mushrooms and swears squirrels give her battle advice. Always ready for an adventure."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_character" />

    <!-- OK Button -->
    <Button
        android:id="@+id/btn_ok"
        style="@style/Widget.App.Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:minWidth="120dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/transparent"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_character_description" />

</androidx.constraintlayout.widget.ConstraintLayout>