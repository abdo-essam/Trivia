<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface"
        android:padding="16dp">

        <!-- Main Result Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/result_card"
            android:layout_width="match_parent"
            android:layout_height="227dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/bg_result_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/layout_result_content"
                layout="@layout/result_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Victory Section -->
        <include
            android:id="@+id/victory_section"
            layout="@layout/result_victory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="-45dp"
            app:layout_constraintBottom_toTopOf="@id/result_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

        <!-- Lose Section -->
        <include
            android:id="@+id/lose_section"
            layout="@layout/result_lose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="-45dp"
            app:layout_constraintBottom_toTopOf="@id/result_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Share Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_share"
            style="@style/TextAppearance.Label.Medium"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_primary"
            android:drawableEnd="@drawable/ic_share"
            android:drawablePadding="8dp"
            android:paddingHorizontal="16dp"
            android:text="@string/share_win_with_friends"
            android:textAllCaps="false"
            android:textColor="@color/on_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_card" />

        <!-- Play Again Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_play_again"
            style="@style/TextAppearance.Label.Medium"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_button_primary"
            android:text="@string/play_again"
            android:textAllCaps="false"
            android:textColor="@color/on_primary"
            app:layout_constraintBottom_toTopOf="@id/btn_back_to_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_share"
            app:layout_constraintVertical_bias="1" />

        <!-- Back to Home Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back_to_home"
            style="@style/TextAppearance.Label.Medium"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_button_secondary"
            android:text="@string/back_to_home"
            android:textAllCaps="false"
            android:textColor="@color/shade_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Loading Overlay - Outside content to cover full screen -->
    <include
        layout="@layout/layout_loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

</FrameLayout>