<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Background Border Shape -->
    <View
        android:id="@+id/corner_shape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_dialog"
        android:contentDescription="@string/card_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Left Gradient -->
    <View
        android:id="@+id/gradient_left"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/bg_gradient_blue_fade"
        android:rotation="180"
        android:translationX="5dp"
        app:layout_constraintDimensionRatio="56:1"
        app:layout_constraintEnd_toStartOf="@id/title_shape"
        app:layout_constraintTop_toTopOf="@id/corner_shape" />

    <!-- Right Gradient -->
    <View
        android:id="@+id/gradient_right"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/bg_gradient_blue_fade"
        android:translationX="-5dp"
        app:layout_constraintDimensionRatio="56:1"
        app:layout_constraintStart_toEndOf="@id/title_shape"
        app:layout_constraintTop_toTopOf="@id/corner_shape" />

    <!-- Title Background -->
    <ImageView
        android:id="@+id/title_shape"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:contentDescription="@string/achievements"
        android:src="@drawable/heptagon_shape"
        app:layout_constraintDimensionRatio="145:40"
        app:layout_constraintEnd_toEndOf="@id/corner_shape"
        app:layout_constraintStart_toStartOf="@id/corner_shape"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/achievements"
        style="@style/TextAppearance.Title.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/achievements"
        android:textColor="@color/on_primary"
        app:layout_constraintBottom_toBottomOf="@+id/title_shape"
        app:layout_constraintEnd_toEndOf="@id/title_shape"
        app:layout_constraintStart_toStartOf="@id/title_shape"
        app:layout_constraintTop_toTopOf="@id/title_shape" />

    <!-- Close Button -->
    <ImageView
        android:id="@+id/close_shape"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/close_icon"
        android:src="@drawable/ic_cancel"
        app:layout_constraintDimensionRatio="22:26"
        app:layout_constraintEnd_toEndOf="@+id/corner_shape"
        app:layout_constraintTop_toTopOf="@+id/corner_shape" />

    <!-- Achievements RecyclerView (Grid with 4 columns) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/achievements_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="12dp"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/txt_click_achievement"
        app:layout_constraintEnd_toEndOf="@+id/corner_shape"
        app:layout_constraintStart_toStartOf="@+id/corner_shape"
        app:layout_constraintTop_toBottomOf="@+id/title_shape"
        app:spanCount="5" />

    <!-- Hint Text -->
    <TextView
        android:id="@+id/txt_click_achievement"
        style="@style/TextAppearance.Body.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="24dp"
        android:text="@string/click_achievement_details"
        android:textColor="@color/shade_secondary"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintStart_toStartOf="@+id/corner_shape"
        app:layout_constraintTop_toBottomOf="@+id/achievements_recycler_view" />

    <!-- OK Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        style="@style/TextAppearance.Label.Medium"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/bg_button_secondary"
        android:text="@string/ok"
        android:textAllCaps="false"
        android:textColor="@drawable/button_secondary_text_color"
        app:layout_constraintBottom_toBottomOf="@+id/corner_shape"
        app:layout_constraintEnd_toEndOf="@+id/corner_shape"
        app:layout_constraintStart_toStartOf="@+id/corner_shape"
        app:layout_constraintTop_toBottomOf="@+id/txt_click_achievement" />

</androidx.constraintlayout.widget.ConstraintLayout>