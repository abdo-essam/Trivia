<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_close_button"
        android:src="@drawable/ic_close"
        android:contentDescription="@string/back"
        app:tint="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/achievements"
        android:textAppearance="@style/TextAppearance.Title.Medium"
        android:textColor="@color/white"
        android:background="@drawable/bg_dialog_title"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="-40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Achievements Grid (4 columns x 3 rows) -->
    <GridLayout
        android:id="@+id/grid_achievements"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:columnCount="4"
        android:rowCount="3"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <!-- Achievement items will be added programmatically -->

    </GridLayout>

    <!-- Hint Text -->
    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/click_achievement_details"
        android:textAppearance="@style/TextAppearance.Body.Small"
        android:textColor="@color/shade_tertiary"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grid_achievements" />

    <!-- OK Button -->
    <Button
        android:id="@+id/btn_ok"
        style="@style/Widget.App.Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:minWidth="120dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/transparent"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hint" />

</androidx.constraintlayout.widget.ConstraintLayout>