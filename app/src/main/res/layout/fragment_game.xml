<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <!-- Header with stats -->
    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_heart"
                app:tint="@color/blue_primary" />

            <TextView
                android:id="@+id/tv_lives"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_coin"
                app:tint="@color/orange" />

            <TextView
                android:id="@+id/tv_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="1000"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_trophy"
                app:tint="@color/yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_crown"
                app:tint="@color/blue_primary" />
        </LinearLayout>

    </LinearLayout>

    <!-- Timer Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_timer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        android:max="30000"
        android:progress="30000"
        android:progressTint="@color/orange"
        android:progressBackgroundTint="@color/gray_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_header" />

    <!-- Question Counter -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_question_counter"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/blue_primary"
        android:text="Q 1/12"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_timer" />

    <!-- Timer Display -->
    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="30s"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_question_counter" />

    <!-- Question Text -->
    <TextView
        android:id="@+id/tv_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="What is the capital of France?"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_timer" />

    <!-- Question Image (optional) -->
    <ImageView
        android:id="@+id/iv_question_image"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_question" />

    <TextView
        android:id="@+id/tv_image_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="The image caption"
        android:textColor="@color/gray_light"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_question_image" />

    <!-- Answer Buttons -->
    <LinearLayout
        android:id="@+id/layout_answers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_image_caption">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_answer1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/gray_dark"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Paris"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_answer2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/gray_dark"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Tokyo"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_answer3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/gray_dark"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="New York City"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_answer4"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@color/gray_dark"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Cairo"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="12dp" />

    </LinearLayout>

    <!-- Error Indicators (floating around wrong answer) -->
    <ImageView
        android:id="@+id/iv_error1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_error_indicator"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/layout_answers"
        app:layout_constraintEnd_toEndOf="@id/layout_answers"
        app:layout_constraintStart_toStartOf="@id/layout_answers"
        app:layout_constraintTop_toTopOf="@id/layout_answers"
        app:tint="@color/red" />

    <ImageView
        android:id="@+id/iv_error2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_error_indicator"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/layout_answers"
        app:layout_constraintEnd_toEndOf="@id/layout_answers"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="@id/layout_answers"
        app:layout_constraintTop_toTopOf="@id/layout_answers"
        app:layout_constraintVertical_bias="0.3"
        app:tint="@color/red" />

    <ImageView
        android:id="@+id/iv_error3"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_error_indicator"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/layout_answers"
        app:layout_constraintEnd_toEndOf="@id/layout_answers"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@id/layout_answers"
        app:layout_constraintTop_toTopOf="@id/layout_answers"
        app:layout_constraintVertical_bias="0.7"
        app:tint="@color/red" />

    <ImageView
        android:id="@+id/iv_error4"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_error_indicator"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/layout_answers"
        app:layout_constraintEnd_toEndOf="@id/layout_answers"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@id/layout_answers"
        app:layout_constraintTop_toTopOf="@id/layout_answers"
        app:layout_constraintVertical_bias="0.8"
        app:tint="@color/red" />

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/layout_actions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_answers">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_check"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/blue_primary"
            android:enabled="false"
            android:text="Check"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="28dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_skip"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gray_dark"
            android:text="Skip"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="28dp" />

    </LinearLayout>

    <!-- Next Button (shown after answer) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/blue_primary"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        app:cornerRadius="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_actions" />
</androidx.constraintlayout.widget.ConstraintLayout>
