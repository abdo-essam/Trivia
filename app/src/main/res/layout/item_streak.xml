<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/bg_streak"
    android:padding="16dp">

    <!-- Large Fire Icon -->
    <ImageView
        android:id="@+id/iv_streak_fire"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_fire_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Streak Content -->
    <LinearLayout
        android:id="@+id/layout_streak_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/iv_streak_fire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Streak Title -->
        <TextView
            android:id="@+id/tv_streak_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 day streak, start make a series"
            android:textAppearance="@style/TextAppearance.Body.Medium"
            android:textColor="@color/shade_primary"
            tools:text="3 day streak, make a big series" />

        <!-- Streak Subtitle -->
        <TextView
            android:id="@+id/tv_streak_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Every day count!"
            android:textAppearance="@style/TextAppearance.Body.Small"
            android:textColor="@color/shade_secondary"
            tools:text="KEEP IT UP!" />

        <!-- Days of Week -->
        <LinearLayout
            android:id="@+id/layout_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Sunday -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_fire_sunday"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_fire_small"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="S"
                    android:textAppearance="@style/TextAppearance.Label.Small"
                    android:textColor="@color/shade_tertiary" />
            </LinearLayout>

            <!-- Monday -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_fire_monday"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_fire_small"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="M"
                    android:textAppearance="@style/TextAppearance.Label.Small"
                    android:textColor="@color/shade_tertiary" />
            </LinearLayout>

            <!-- Tuesday -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_fire_tuesday"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_fire_small"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="T"
                    android:textAppearance="@style/TextAppearance.Label.Small"
                    android:textColor="@color/shade_tertiary" />
            </LinearLayout>

            <!-- Wednesday -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_fire_wednesday"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_fire_small"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="W"
                    android:textAppearance="@style/TextAppearance.Label.Small"
                    android:textColor="@color/shade_tertiary" />
            </LinearLayout>

            <!-- Thursday -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_fire_thursday"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_fire_small"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Th"
                    android:textAppearance="@style/TextAppearance.Label.Small"
                    android:textColor="@color/shade_tertiary" />
            </LinearLayout>

            <!-- Friday -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_fire_friday"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_fire_small"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="F"
                    android:textAppearance="@style/TextAppearance.Label.Small"
                    android:textColor="@color/shade_tertiary" />
            </LinearLayout>

            <!-- Saturday -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_fire_saturday"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_fire_small"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="S"
                    android:textAppearance="@style/TextAppearance.Label.Small"
                    android:textColor="@color/shade_tertiary" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>