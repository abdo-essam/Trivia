<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="205dp">

    <ImageView
        android:id="@+id/background_question_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        android:contentDescription="@string/background_question_card"
        android:scaleType="fitXY"
        android:background="@drawable/bg_question_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/gradient_left"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/bg_gradient_blue_fade"
        android:rotation="180"
        android:translationX="5dp"
        app:layout_constraintDimensionRatio="100:1"
        app:layout_constraintEnd_toStartOf="@id/header_question"
        app:layout_constraintTop_toTopOf="@id/background_question_card" />

    <View
        android:id="@+id/gradient_right"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/bg_gradient_blue_fade"
        android:translationX="-5dp"
        app:layout_constraintDimensionRatio="100:1"
        app:layout_constraintStart_toEndOf="@id/header_question"
        app:layout_constraintTop_toTopOf="@id/background_question_card" />

    <ImageView
        android:id="@+id/header_question"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:contentDescription="@string/header_question"
        android:src="@drawable/heptagon_shape"
        app:layout_constraintDimensionRatio="145:40"
        app:layout_constraintEnd_toEndOf="@id/background_question_card"
        app:layout_constraintStart_toStartOf="@id/background_question_card"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_question_counter"
        style="@style/TextAppearance.Title.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/on_primary"
        app:layout_constraintBottom_toBottomOf="@+id/header_question"
        app:layout_constraintEnd_toEndOf="@id/header_question"
        app:layout_constraintStart_toStartOf="@id/header_question"
        app:layout_constraintTop_toTopOf="@id/header_question"
        tools:text="Q 1/12"/>

    <TextView
        android:id="@+id/tv_question"
        style="@style/TextAppearance.Body.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/shade_primary"
        app:layout_constraintEnd_toEndOf="@+id/background_question_card"
        app:layout_constraintStart_toStartOf="@+id/background_question_card"
        app:layout_constraintTop_toBottomOf="@+id/header_question"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Which of the following best explains how a country's physical geography can influence its level of economic development?" />

</androidx.constraintlayout.widget.ConstraintLayout>