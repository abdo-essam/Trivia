<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="40dp"
    android:paddingBottom="22dp">

    <!-- Reward Label -->
    <TextView
        android:id="@+id/tv_reward_label"
        style="@style/TextAppearance.Title.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/reward"
        android:textColor="@color/shade_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Reward Coins -->
    <LinearLayout
        android:id="@+id/layout_reward_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/tv_reward_label"
        app:layout_constraintStart_toStartOf="@id/tv_reward_label"
        app:layout_constraintTop_toBottomOf="@id/tv_reward_label">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/coins"
            android:src="@drawable/ic_coin_stack" />

        <TextView
            android:id="@+id/tv_coins_earned"
            style="@style/TextAppearance.Title.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginVertical="6dp"
            android:textColor="@color/shade_primary"
            tools:text="500" />
    </LinearLayout>

    <!-- Statistics -->
    <include
        android:id="@+id/layout_statistics"
        layout="@layout/result_statistics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_reward_coins" />

</androidx.constraintlayout.widget.ConstraintLayout>