<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface">

    <!-- Background Title with stroke effect (5% opacity) -->
    <com.qurio.trivia.ui.custom.StrokeTextView
        android:id="@+id/tv_title_background"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.App.Headline.Large"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="135dp"
        android:alpha="0.05"
        android:letterSpacing="0"
        tools:text="Welcome to Qurio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.App.Headline.Large"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="135dp"
        tools:text="Welcome to Qurio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.App.Body.Medium"
        android:textColor="#99FFFFFF"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="40dp"
        tools:text="Welcome to the world of Qurio, where questions spark curiosity and prizes await the smartest. Ready to begin the challenge?"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

        <!-- Main Illustration -->
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="100dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/onboarding_1" />

</androidx.constraintlayout.widget.ConstraintLayout>