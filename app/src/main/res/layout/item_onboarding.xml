<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface">

    <!-- Invisible spacer for left padding -->
    <Space
        android:id="@+id/space_left"
        android:layout_width="16dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Invisible spacer for right padding -->
    <Space
        android:id="@+id/space_right"
        android:layout_width="16dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Title.Large"
        android:textColor="@color/shade_primary"
        android:textAlignment="center"
        android:layout_marginTop="115dp"
        android:layout_marginHorizontal="24dp"
        tools:text="Welcome to Qurio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Background Title with stroke effect (5% opacity) - Behind main title -->
    <com.qurio.trivia.presentation.ui.custom.StrokeTextView
        android:id="@+id/tv_title_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Headline.Large"
        android:textSize="44sp"
        android:textColor="@color/shade_primary"
        android:textAlignment="center"
        android:alpha="0.05"
        android:letterSpacing="0"
        android:elevation="0dp"
        tools:text="Welcome to Qurio"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Body.Small"
        android:textColor="@color/shade_secondary"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        tools:text="Welcome to the world of Qurio, where questions spark curiosity and prizes await the smartest. Ready to begin the challenge?"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Illustration with constraints to respect arrow space -->
    <ImageView
        android:id="@+id/iv_image"
        android:padding="24dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="120dp"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="104dp"
        android:contentDescription="@string/onboarding_illustration"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/onboarding_1" />

</androidx.constraintlayout.widget.ConstraintLayout>