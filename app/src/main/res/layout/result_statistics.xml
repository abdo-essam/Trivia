<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Correct Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_correct"
        style="@style/Widget.App.StatCard"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card_incorrect"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/item_stat"
            android:id="@+id/stat_correct" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Incorrect Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_incorrect"
        style="@style/Widget.App.StatCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card_skipped"
        app:layout_constraintStart_toEndOf="@id/card_correct"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/item_stat"
            android:id="@+id/stat_incorrect" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Skipped Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_skipped"
        style="@style/Widget.App.StatCard"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_incorrect"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/item_stat"
            android:id="@+id/stat_skipped" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>