<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="36dp">

    <!-- Horizontal gradient line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_horizontal_gradient" />

    <!-- Button Container -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <!-- Hexagon Button Background -->
        <ImageView
            android:layout_width="168dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_hexagon_play_button" />

        <!-- Button Content -->
        <LinearLayout
            android:id="@+id/btn_play_now"
            android:layout_width="168dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/ic_star_filled"
                android:layout_marginEnd="8dp"
                app:tint="@color/on_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play_now"
                android:textAppearance="@style/TextAppearance.Label.Medium"
                android:textColor="@color/on_primary"
                android:includeFontPadding="false" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/ic_star_filled"
                android:layout_marginStart="8dp"
                app:tint="@color/on_primary" />

        </LinearLayout>
    </FrameLayout>

</FrameLayout>