<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Blur Background -->
    <ImageView
        android:id="@+id/iv_blur_background_lose"
        android:layout_width="match_parent"
        android:layout_height="154.54dp"
        android:layout_marginHorizontal="14dp"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_result_shape_lose" />

    <!-- Ribbon with Text -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="109.76dp">

        <ImageView
            android:id="@+id/iv_ribbon_banner_lose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/banner_ribbon_lose" />

        <!-- Title with Shadow Effect -->
        <TextView
            android:id="@+id/tv_lose_title_shadow"
            style="@style/TextAppearance.Headline.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="11.24dp"
            android:text="@string/you_lose"
            android:textColor="#E6311F"
            android:textStyle="bold" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_lose_title"
            style="@style/TextAppearance.Headline.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="8.24dp"
            android:text="@string/you_lose"
            android:textColor="@color/on_primary"
            android:textStyle="bold" />

    </FrameLayout>

</FrameLayout>