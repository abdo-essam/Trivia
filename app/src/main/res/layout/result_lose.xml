<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Shine Effect -->
    <ImageView
        android:id="@+id/iv_shine_effect_lose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_result_shape_lose"
        app:layout_constraintBottom_toTopOf="@id/iv_ribbon_banner_lose"
        app:layout_constraintEnd_toEndOf="@id/iv_ribbon_banner_lose"
        app:layout_constraintStart_toStartOf="@id/iv_ribbon_banner_lose"
        app:layout_constraintTop_toTopOf="@id/iv_ribbon_banner_lose" />

    <!-- Ribbon Banner -->
    <ImageView
        android:id="@+id/iv_ribbon_banner_lose"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/banner_ribbon_lose"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title Shadow Effect -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/you_lose"
        android:textColor="#E6311F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_lose_title"
        app:layout_constraintEnd_toEndOf="@id/tv_lose_title"
        app:layout_constraintStart_toStartOf="@id/tv_lose_title"
        app:layout_constraintTop_toTopOf="@id/tv_lose_title" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_lose_title"
        style="@style/TextAppearance.Headline.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_lose"
        android:textColor="@color/on_primary"
        app:layout_constraintBottom_toBottomOf="@id/iv_ribbon_banner_lose"
        app:layout_constraintEnd_toEndOf="@id/iv_ribbon_banner_lose"
        app:layout_constraintStart_toStartOf="@id/iv_ribbon_banner_lose"
        app:layout_constraintTop_toTopOf="@id/iv_ribbon_banner_lose" />

</androidx.constraintlayout.widget.ConstraintLayout>