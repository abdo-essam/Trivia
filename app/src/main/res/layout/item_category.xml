<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="344dp"
    android:layout_marginEnd="16dp">

    <!-- Card Background with Border -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_category"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/on_image_surface"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/green_accent"
        app:strokeWidth="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Category Image -->
            <ImageView
                android:id="@+id/iv_category_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                android:padding="16dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_category_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/category_geography" />

            <!-- Category Name -->
            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Title.Large"
                android:textColor="@color/shade_primary"
                app:layout_constraintBottom_toTopOf="@+id/btn_play_now"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Geography" />

            <!-- Play Now Button Background -->
            <View
                android:id="@+id/btn_background"
                android:layout_width="165dp"
                android:layout_height="44dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_category_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Play Now Button -->
            <TextView
                android:id="@+id/btn_play_now"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/play_now"
                android:textAppearance="@style/TextAppearance.Label.Medium"
                android:textColor="@color/shade_primary"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="@+id/btn_background"
                app:layout_constraintEnd_toEndOf="@+id/btn_background"
                app:layout_constraintStart_toStartOf="@+id/btn_background"
                app:layout_constraintTop_toTopOf="@+id/btn_background" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>