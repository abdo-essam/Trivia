<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingHorizontal="8dp"
    android:paddingBottom="22dp">

    <com.qurio.trivia.presentation.ui.custom.CategoryCard
        android:id="@+id/category_card"
        android:layout_width="328dp"
        android:layout_height="366dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_category_name"
        style="@style/TextAppearance.Title.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textAlignment="center"
        android:textColor="@color/on_primary"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="8"
        app:layout_constraintBottom_toTopOf="@id/btn_play_now"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="General Knowledge" />

    <include
        android:id="@+id/btn_play_now"
        layout="@layout/button_play_now"
        android:layout_width="168dp"
        android:layout_height="44dp"
        android:layout_marginTop="-22dp"
        app:layout_constraintEnd_toEndOf="@id/category_card"
        app:layout_constraintStart_toStartOf="@id/category_card"
        app:layout_constraintTop_toBottomOf="@id/category_card" />

</androidx.constraintlayout.widget.ConstraintLayout>