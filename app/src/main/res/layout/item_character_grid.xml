<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackgroundBorderless">

    <!-- Character Image -->
    <ImageView
        android:id="@+id/iv_character"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/character_image"
        android:scaleType="centerCrop"
        tools:src="@drawable/character_rika"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Selection Checkmark -->
    <ImageView
        android:id="@+id/iv_selected_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_check_circle"
        android:contentDescription="@string/character_image"
        android:visibility="gone"
        app:tint="@color/primary"
        app:layout_constraintEnd_toEndOf="@id/iv_character"
        app:layout_constraintTop_toTopOf="@id/iv_character"
        tools:visibility="visible" />

    <!-- Character Name -->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Label.Small"
        android:textColor="@color/white"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        tools:text="Rika"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_character" />

</androidx.constraintlayout.widget.ConstraintLayout>