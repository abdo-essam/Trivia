<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Character Image (or Locked Image with everything built-in) -->
    <ImageView
        android:id="@+id/iv_character"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/character_image"
        android:scaleType="centerCrop"
        tools:src="@drawable/character_rika"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Selection Checkmark (only for selected unlocked character) -->
    <ImageView
        android:id="@+id/iv_selected_check"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/selected"
        android:src="@drawable/ic_check"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/iv_character"
        app:layout_constraintTop_toTopOf="@id/iv_character"
        tools:visibility="visible" />

    <!-- Character Name -->
    <TextView
        android:id="@+id/tv_name"
        style="@style/TextAppearance.Label.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/shade_tertiary"
        tools:text="Miko"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_character" />

</androidx.constraintlayout.widget.ConstraintLayout>