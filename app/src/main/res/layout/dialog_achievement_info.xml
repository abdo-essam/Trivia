<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_close_button"
        android:src="@drawable/ic_close"
        android:contentDescription="@string/back"
        app:tint="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Untouchable"
        android:textAppearance="@style/TextAppearance.Title.Medium"
        android:textColor="@color/white"
        android:background="@drawable/bg_dialog_title"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="-40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_badge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="56dp"
        android:contentDescription="@string/awards"
        tools:src="@drawable/ic_trophy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_achievement_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Title.Large"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="16dp"
        tools:text="Untouchable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_badge" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Body.Small"
        android:textColor="@color/shade_secondary"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="8dp"
        tools:text="You rarely make mistakes! You're at a very high level and dominate the game."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_achievement_name" />

    <TextView
        android:id="@+id/tv_how_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="How to get it:"
        android:textAppearance="@style/TextAppearance.Body.Medium"
        android:textColor="@color/shade_primary"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description" />

    <TextView
        android:id="@+id/tv_how_to_get"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Body.Small"
        android:textColor="@color/shade_secondary"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="4dp"
        tools:text="Correctly answer 10 consecutive questions in a single game without making a single mistake."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_how_label" />

    <!-- Share Button (only for unlocked) -->
    <Button
        android:id="@+id/btn_share"
        style="@style/Widget.App.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/share_with_friends"
        android:drawableEnd="@drawable/ic_share"
        android:drawableTint="@color/white"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/btn_ok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_how_to_get"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_ok"
        style="@style/Widget.App.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:backgroundTint="@color/transparent"
        android:textColor="@color/primary"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_share"
        app:layout_constraintTop_toTopOf="@id/btn_share" />

</androidx.constraintlayout.widget.ConstraintLayout>