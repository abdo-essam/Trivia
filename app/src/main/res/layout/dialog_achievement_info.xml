<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Background -->
    <View
        android:id="@+id/corners_cut_shape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_dialog"
        android:contentDescription="@string/card_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Left Gradient -->
    <View
        android:id="@+id/gradient_left"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/bg_gradient_blue_fade"
        android:rotation="180"
        android:translationX="5dp"
        app:layout_constraintDimensionRatio="56:1"
        app:layout_constraintEnd_toStartOf="@id/title_shape"
        app:layout_constraintTop_toTopOf="@id/corners_cut_shape" />

    <!-- Right Gradient -->
    <View
        android:id="@+id/gradient_right"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/bg_gradient_blue_fade"
        android:translationX="-5dp"
        app:layout_constraintDimensionRatio="56:1"
        app:layout_constraintStart_toEndOf="@id/title_shape"
        app:layout_constraintTop_toTopOf="@id/corners_cut_shape" />

    <!-- Title Background -->
    <ImageView
        android:id="@+id/title_shape"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:contentDescription="@string/title"
        android:src="@drawable/heptagon_shape"
        app:layout_constraintDimensionRatio="145:40"
        app:layout_constraintEnd_toEndOf="@id/corners_cut_shape"
        app:layout_constraintStart_toStartOf="@id/corners_cut_shape"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/title_txt"
        style="@style/TextAppearance.Title.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/on_primary"
        tools:text="Explorer"
        app:layout_constraintBottom_toBottomOf="@+id/title_shape"
        app:layout_constraintEnd_toEndOf="@id/title_shape"
        app:layout_constraintStart_toStartOf="@id/title_shape"
        app:layout_constraintTop_toTopOf="@id/title_shape" />

    <!-- Close Button -->
    <ImageView
        android:id="@+id/close_shape"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/cancel"
        android:src="@drawable/ic_cancel"
        app:layout_constraintDimensionRatio="22:26"
        app:layout_constraintEnd_toEndOf="@+id/corners_cut_shape"
        app:layout_constraintTop_toTopOf="@+id/corners_cut_shape" />

    <!-- Achievement Card Background -->
    <View
        android:id="@+id/item_shape_view"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_character_card"
        app:layout_constraintEnd_toEndOf="@+id/corners_cut_shape"
        app:layout_constraintStart_toStartOf="@+id/corners_cut_shape"
        app:layout_constraintTop_toBottomOf="@+id/title_shape" />

    <!-- Achievement Name -->
    <TextView
        android:id="@+id/validation_txt"
        style="@style/TextAppearance.Title.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="120dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/shade_primary"
        android:textSize="18sp"
        tools:text="Explorer"
        app:layout_constraintBottom_toBottomOf="@+id/item_shape_view"
        app:layout_constraintEnd_toEndOf="@+id/item_shape_view"
        app:layout_constraintStart_toStartOf="@+id/item_shape_view"
        app:layout_constraintTop_toTopOf="@+id/item_shape_view" />

    <!-- Celebration Background Image (only visible when unlocked) -->
    <ImageView
        android:id="@+id/celebrate_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="-6dp"
        android:contentDescription="@string/celebration"
        android:src="@drawable/bg_badge_decoration"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/item_shape_view"
        app:layout_constraintEnd_toEndOf="@+id/item_shape_view"
        app:layout_constraintTop_toTopOf="@+id/item_shape_view" />

    <!-- Achievement Badge Icon -->
    <ImageView
        android:id="@+id/achievement_image"
        android:layout_width="65dp"
        android:layout_height="64dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/achievement_badge"
        tools:src="@drawable/ic_achievement_streak_starter"
        app:layout_constraintBottom_toBottomOf="@+id/item_shape_view"
        app:layout_constraintEnd_toEndOf="@+id/item_shape_view"
        app:layout_constraintTop_toTopOf="@+id/item_shape_view" />

    <!-- Description -->
    <TextView
        android:id="@+id/achievement_description"
        style="@style/TextAppearance.Body.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/shade_secondary"
        tools:text="You love experimenting and discovering! You've tried several categories and aren't limited to just one.\n\nHow to get:\nPlay in at least 5 different categories."
        app:layout_constraintEnd_toEndOf="@+id/corners_cut_shape"
        app:layout_constraintStart_toStartOf="@+id/corners_cut_shape"
        app:layout_constraintTop_toBottomOf="@+id/item_shape_view" />

    <!-- Guidelines for button positioning -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="12dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="12dp" />

    <!-- Share Button (only visible when unlocked) -->
    <LinearLayout
        android:id="@+id/btn_share"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_button_primary"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/btn_ok"
        app:layout_constraintEnd_toStartOf="@+id/btn_ok"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/btn_ok"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.48">

        <TextView
            android:id="@+id/txt_share"
            style="@style/TextAppearance.Label.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_with_friends"
            android:textAllCaps="false"
            android:textColor="@drawable/button_primary_text_color"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ic_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/share_with_friends"
            android:src="@drawable/ic_share"
            app:tint="@color/on_primary" />

    </LinearLayout>

    <!-- OK Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        style="@style/TextAppearance.Label.Medium"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/bg_button_secondary"
        android:text="@string/ok"
        android:textAllCaps="false"
        android:textColor="@drawable/button_secondary_text_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/corners_cut_shape"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toEndOf="@+id/btn_share"
        app:layout_constraintTop_toBottomOf="@+id/achievement_description" />

</androidx.constraintlayout.widget.ConstraintLayout>