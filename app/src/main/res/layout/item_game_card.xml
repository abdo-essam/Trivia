<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="344dp"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="8dp">

    <!-- Category Image (with border already included) -->
    <ImageView
        android:id="@+id/iv_category_image"
        android:layout_width="match_parent"
        android:layout_height="322dp"
        android:layout_gravity="top"
        android:scaleType="fitXY"
        tools:src="@drawable/category_geography" />

    <!-- Category Name (overlaid on image) -->
    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="52dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Title.Large"
        android:textColor="@color/shade_primary"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="8"
        tools:text="Geography" />

    <!-- Play Now Button (overlapping bottom) -->
    <FrameLayout
        android:layout_width="165dp"
        android:layout_height="44dp"
        android:layout_gravity="bottom|center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_hexagon_button"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/btn_play_now"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_star_small"
                android:layout_marginEnd="6dp"
                app:tint="@color/shade_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play_now"
                android:textAppearance="@style/TextAppearance.Label.Medium"
                android:textColor="@color/shade_primary" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_star_small"
                android:layout_marginStart="6dp"
                app:tint="@color/shade_primary" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>