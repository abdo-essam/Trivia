<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Category Image (with border already included) -->
    <ImageView
        android:id="@+id/iv_category_image"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal|top"
        android:scaleType="fitXY"
        android:padding="4dp"
        tools:src="@drawable/category_geography" />

    <!-- Category Name (overlaid on image) -->
    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Title.Large"
        android:textColor="@color/on_primary"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="8"
        tools:text="General Knowledge" />

    <!-- Play Now Button Section (overlapping the bottom of the card image) -->
    <include
        layout="@layout/button_play_now_small"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal|bottom" />

</FrameLayout>