<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Bottom Gradient Stroke -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@android:color/transparent" />
            <gradient
                android:startColor="#49BAF2"
                android:centerColor="#050C10"
                android:endColor="#49BAF2"
                android:angle="0"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Inner content area (to cover the gradient except bottom) -->
    <item
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>