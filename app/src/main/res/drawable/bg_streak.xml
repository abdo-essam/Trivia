<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#FF050C10"
                android:endColor="#1F49BAF2"
                android:startColor="#1F49BAF2" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_high" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>
