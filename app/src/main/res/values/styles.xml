<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Material Design 3 Typography Styles -->
    <style name="TextAppearance.Headline" parent="TextAppearance.Material3.HeadlineLarge"/>
    <style name="TextAppearance.Title" parent="TextAppearance.Material3.TitleLarge"/>
    <style name="TextAppearance.Body" parent="TextAppearance.Material3.BodyLarge"/>
    <style name="TextAppearance.Label" parent="TextAppearance.Material3.LabelLarge"/>

    <!-- Headline Styles -->
    <style name="TextAppearance.Headline.Large" parent="TextAppearance.Headline">
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">@dimen/text_headline_large</item>
        <item name="android:lineHeight" tools:targetApi="28">@dimen/line_height_headline_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Headline.Medium" parent="TextAppearance.Headline">
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">@dimen/text_headline_medium</item>
        <item name="android:lineHeight" tools:targetApi="28">@dimen/line_height_headline_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Headline.Small" parent="TextAppearance.Headline">
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">@dimen/text_headline_small</item>
        <item name="android:lineHeight" tools:targetApi="28">@dimen/line_height_headline_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Title Styles -->
    <style name="TextAppearance.Title.Large" parent="TextAppearance.Title">
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">@dimen/text_title_large</item>
        <item name="android:lineHeight" tools:targetApi="28">@dimen/line_height_title_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Title.Medium" parent="TextAppearance.Title">
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">@dimen/text_title_medium</item>
        <item name="android:lineHeight" tools:targetApi="28">@dimen/line_height_title_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Title.Small" parent="TextAppearance.Title">
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">@dimen/text_title_small</item>
        <item name="android:lineHeight" tools:targetApi="28">@dimen/line_height_title_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Body Styles -->
    <style name="TextAppearance.Body.Large" parent="TextAppearance.Body">
        <item name="fontFamily">@font/fredoka</item>
        <item name="android:textSize">@dimen/text_body_large</item>
        <item name="android:lineHeight" tools:targetApi="28">@dimen/line_height_body_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Body.Medium" parent="TextAppearance.Body">
        <item name="fontFamily">@font/fredoka</item>
        <item name="android:textSize">@dimen/text_body_medium</item>
        <item name="android:lineHeight" tools:targetApi="28">@dimen/line_height_body_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Body.Small" parent="TextAppearance.Body">
        <item name="fontFamily">@font/fredoka</item>
        <item name="android:textSize">@dimen/text_body_small</item>
        <item name="android:lineHeight" tools:targetApi="28">@dimen/line_height_body_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Label Styles -->
    <style name="TextAppearance.Label.Large" parent="TextAppearance.Label">
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">@dimen/text_label_large</item>
        <item name="android:lineHeight" tools:targetApi="28">@dimen/line_height_label_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Label.Medium" parent="TextAppearance.Label">
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">@dimen/text_label_medium</item>
        <item name="android:lineHeight" tools:targetApi="28">@dimen/line_height_label_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Label.Small" parent="TextAppearance.Label">
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">@dimen/text_label_small</item>
        <item name="android:lineHeight" tools:targetApi="28">@dimen/line_height_label_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Label.XSmall" parent="TextAppearance.Label">
        <item name="fontFamily">@font/fredoka</item>
        <item name="android:textSize">@dimen/text_label_xsmall</item>
        <item name="android:lineHeight" tools:targetApi="28">@dimen/line_height_label_xsmall</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Base Button Style -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Primary Button Style -->
    <style name="Widget.App.Button.Primary" parent="Widget.App.Button">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/text_button_primary</item>
        <item name="android:textAppearance">@style/TextAppearance.Label.Medium</item>
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:minHeight">@dimen/button_height_default</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal_default</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal_default</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Difficulty Button Style -->
    <style name="Widget.App.Button.Difficulty" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Label.Medium</item>
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="backgroundTint">@color/selector_difficulty_background</item>
        <item name="android:textColor">@color/selector_difficulty_text</item>
        <item name="strokeColor">@color/shade_quad</item>
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.Difficulty</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="rippleColor">@color/primary_variant</item>
    </style>

    <!-- Difficulty Button Shape with Cut Corners -->
    <style name="ShapeAppearance.App.Difficulty" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <!-- Stat Card Style -->
    <style name="Widget.App.StatCard" parent="">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="cardBackgroundColor">@color/surface_high</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="contentPaddingTop">2dp</item>
        <item name="contentPaddingBottom">2dp</item>
        <item name="shapeAppearanceOverlay">@style/ResultCardShape</item>
        <item name="strokeColor">@color/shade_quad</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Result Card Shape -->
    <style name="ResultCardShape">
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeTopRight">2dp</item>
        <item name="cornerSizeBottomLeft">2dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
    </style>

    <!-- Secondary Button -->
    <style name="Widget.App.Button.Secondary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/disable</item>
        <item name="android:textColor">@color/shade_primary</item>
        <item name="fontFamily">@font/fredoka_one</item>
    </style>

    <!-- Answer Button Style -->
    <style name="Widget.App.Button.Answer" parent="Widget.Material3.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/shade_primary</item>
        <item name="android:textAppearance">@style/TextAppearance.Body.Medium</item>
        <item name="fontFamily">@font/fredoka</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="backgroundTint">@null</item>
        <item name="rippleColor">@color/primary_variant</item>
    </style>

    <!-- Text Button Style for Skip -->
    <style name="Widget.App.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Label.Medium</item>
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minHeight">40dp</item>
        <item name="rippleColor">@color/primary_variant</item>
    </style>

    <!-- Dialog Card Style -->
    <style name="Widget.App.DialogCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface_high</item>
        <item name="cardElevation">8dp</item>
        <item name="shapeAppearanceOverlay">@style/DialogCardShape</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Dialog Card Shape -->
    <style name="DialogCardShape">
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

</resources>
